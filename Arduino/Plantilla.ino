////////////////////////////////////////////////////////////////////////////////////
//int led_blanco=6;
#define led_blanco 6
#define pulsador 4

boolean lectura;

////////////////////////////////////////////////////////////////////////////////////
// FUNCIONES ///////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////


////////////////////////////////////////////////////////////////////////////////////
// CONFIGURACIÓN ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////
void setup() 
{
pinMode(6,OUTPUT);
}
////////////////////////////////////////////////////////////////////////////////////
// PRINCIPAL ///////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////
void loop() 
{
lectura=digitalRead(pulsador);
digitalWrite(led_blanco,lectura);
}
